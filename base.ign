{
  "ignition": {
    "version": "3.1.0"
  },
  "passwd": {
    "users": [
      {
        "name": "core",
        "sshAuthorizedKeys": [ssh-rsa ]
      }
    ]
  },
  "storage": {
    "files": [
      {
        "path": "/etc/homeassistant.yaml",
        "mode": 420,
        "contents": {
          "source": "data:,<your-homeassistant-config>"
        }
      },
      {
        "path": "/etc/pihole.yaml",
        "mode": 420,
        "contents": {
          "source": "data:,<your-pihole-config>"
        }
      },
      {
        "path": "/etc/systemd/network/10-static-en.network",
        "mode": 420,
        "contents": {
          "source": "data:,[Match]\nName=en*\n\n[Network]\nAddress=192.168.21.25/24\nGateway=192.168.21.1\nDNS=8.8.8.8"
        }
      }
    ]
  },
  "systemd": {
    "units": [
      {
        "name": "homeassistant.service",
        "enabled": true,
        "contents": "[Service]\nExecStart=/usr/bin/podman run --rm --name homeassistant -v /etc/homeassistant.yaml:/config/configuration.yaml -p 8123:8123 homeassistant/home-assistant:stable\n[Install]\nWantedBy=multi-user.target"
      },
      {
        "name": "pihole.service",
        "enabled": true,
        "contents": "[Service]\nExecStart=/usr/bin/podman run --rm --name pihole -v /etc/pihole.yaml:/etc/pihole/pihole.conf -p 53:53/tcp -p 53:53/udp -p 80:80 -e TZ='UTC' pihole/pihole:latest\n[Install]\nWantedBy=multi-user.target"
      }
    ]
  }
}
